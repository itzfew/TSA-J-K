<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Question Details</title>
    <script type="text/javascript" async src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.7/MathJax.js?config=TeX-MML-AM_CHTML"></script>
    <style>
        
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        header {
            background-color: #333;
            color: white;
            padding: 15px;
            text-align: center;
        }
        nav ul {
            list-style-type: none;
            padding: 0;
        }
        nav ul li {
            display: inline;
            margin: 0 20px;
        }
        nav ul li a {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }
        main {
            padding: 20px;
        }
        .question-detail {
            background-color: #fff;
            border: 2px solid #ddd;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
            max-width: 900px;
        }
        .question-detail h3 {
            margin-top: 0;
            font-size: 1.8em;
            color: #333;
        }
        .options {
            margin: 20px 0;
        }
        .options li {
            background-color: #f9f9f9;
            padding: 12px 20px;
            margin: 8px 0;
            border-radius: 8px;
            border: 2px solid #ddd;
            cursor: pointer;
            font-size: 1.1em;
            transition: all 0.3s ease;
        }
        .options li:hover {
            background-color: #e6f7ff;
        }
        .options li.selected {
            background-color: #c1e7fc;
        }
        .options li.correct {
            background-color: #28a745;
            color: white;
        }
        .options li.incorrect {
            background-color: #dc3545;
            color: white;
        }
        .check-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 12px 25px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 1.2em;
            transition: background-color 0.3s ease;
        }
        .check-btn:hover {
            background-color: #0056b3;
        }
        .timer {
            position: fixed;
            top: 15px;
            right: 15px;
            font-size: 1.2em;
            color: #333;
            background-color: #fff;
            padding: 10px;
            border-radius: 8px;
            border: 2px solid #ddd;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .explanation {
            margin-top: 20px;
            background-color: #f9f9f9;
            padding: 15px;
            border-radius: 8px;
            border: 2px solid #ddd;
        }
        .explanation p {
            margin: 0;
            font-size: 1.1em;
        }
        .mathjax-inline {
            white-space: nowrap;
            display: inline-block;
            font-size: 1.2em;
            color: #007bff;
        }

        /* Ensure responsive design */
        @media screen and (max-width: 768px) {
            .question-detail {
                padding: 15px;
                max-width: 100%;
            }
            nav ul li {
                display: block;
                margin: 10px 0;
            }
            .options li {
                font-size: 1em;
                padding: 10px;
            }
        }
    </style>
</head>
<body>

<header>
    <nav>
        <ul>
            <li><a href="index.html">Home</a></li>
            <li><a href="index.html?subject=biology">Biology</a></li>
            <li><a href="index.html?subject=physics">Physics</a></li>
            <li><a href="index.html?subject=chemistry">Chemistry</a></li>
        </ul>
    </nav>
</header>

<main>
    <div id="question-detail"></div>
    <div class="timer" id="timer">Time Left: 1:00</div>
</main>

<script>
                        const metaIds = [
    "3c48616f-298a-5f69-91d2-bcd59444c455", "cbfbed57-d7d8-5a07-9957-478e4cb62f17", "8dd253c6-09a8-5875-b127-a0c00a165a1b",
    "c7fb1fc7-cb24-58d1-99f5-4ced0111082d", "2ff56f11-0061-566e-aeca-9cc14246e8fb", "27ba990b-5085-5196-87dd-9727f95fc228",
    "c3ae87e9-4094-514a-b2a4-b6e98b1d7ec3", "ce68b80b-fff0-5db8-8d6a-668d729d487a", "57222784-be0a-5653-930c-8ac44c689e21"
];
let questionFound = false;

function loadQuestionDetail() {
    const urlParams = new URLSearchParams(window.location.search);
    const [subject, chapter, questionId] = urlParams.get('id').split('/');

    function fetchQuestion(metaId) {
        const questionUrl = `https://raw.githubusercontent.com/itzfew/Quizes/refs/heads/main/pyq/${metaId}.json`;

        fetch(questionUrl)
            .then(response => response.json())
            .then(data => {
                let question = {};
                if (subject === 'biology') {
                    question = data[0].questions.find(q => q.question_id === questionId);
                } else if (subject === 'physics') {
                    question = data[1].questions.find(q => q.question_id === questionId);
                } else if (subject === 'chemistry') {
                    question = data[2].questions.find(q => q.question_id === questionId);
                }

                if (question) {
                    questionFound = true;
                    displayQuestion(question);
                } else if (!questionFound) {
                    const nextMetaId = metaIds.shift();
                    if (nextMetaId) {
                        fetchQuestion(nextMetaId);
                    } else {
                        document.getElementById('question-detail').innerHTML = '<p>Question not found in any of the available resources. Please try again later.</p>';
                    }
                }
            })
            .catch(error => {
                console.error('Error fetching question data:', error);
                document.getElementById('question-detail').innerHTML = '<p>Error loading question details. Please try again later.</p>';
            });
    }

    fetchQuestion(metaIds[0]);
}

function displayQuestion(question) {
    let questionDetailHTML = `
        <h3>${question.content.replace(/\$\$(.*?)\$\$/g, (match, p1) => {
            return `<span class="mathjax-inline">$$${p1}$$</span>`;
        })}</h3>
        <ul class="options">
            ${question.options.map((opt, index) => 
                `<li data-option="${opt.identifier}" id="option${index}">
                    ${String.fromCharCode(65 + index)}. ${opt.content}
                </li>`
            ).join('')}
        </ul>
        <button class="check-btn" onclick="checkAnswer('${question.question_id}')">Check Answer</button>
    `;

    document.getElementById('question-detail').innerHTML = questionDetailHTML;

    // Add event listeners for options
    const options = document.querySelectorAll('.options li');
    options.forEach(option => {
        option.addEventListener('click', function () {
            options.forEach(opt => opt.classList.remove('selected'));
            option.classList.add('selected');
            disableOptions(options);
        });
    });

    // Start the timer
    startTimer();
}

function disableOptions(options) {
    options.forEach(option => {
        option.style.pointerEvents = 'none'; // Disable other options
    });
}

// Timer and other functions here...
loadQuestionDetail();

</script>

</body>
</html>
